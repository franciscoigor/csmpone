{
  "type": "object",
  "comment": "Login",
  "properties": {
    "username": {
      "type": "string",
      "label": "username",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "#UserName",
      "control": "text"
    },
    "password": {
      "type": "string",
      "label": "password",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "#Password",
      "control": "text"
    },
    "errorMessage": {
      "type": "string",
      "label": "errorMessage",
      "update": {
        "type": "none"
      },
      "selector": "body",
      "control": "property.innerText"
    },
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": "input[value=\"Log in\"]",
      "control": "action.button"
    },
    "userErrorMessage": {
      "type": "string",
      "update": {
        "type": "none"
      },
      "selector": ".field-validation-error[data-valmsg-for=\"UserName\"]",
      "control": "property.innerText"
    },
    "passwordErrorMessage": {
      "type": "string",
      "update": {
        "type": "none"
      },
      "selector": ".field-validation-error[data-valmsg-for=\"Password\"]",
      "control": "property.innerText"
    },
    "isLogin": {
      "type": "identifier",
      "selector": "input[value=\"Log in\"]",
      "control": "exists"
    }
  },
  "connect": [
    {
      "match": [
        "isLogin"
      ],
      "screens": [
        "login"
      ]
    }
  ]
}
